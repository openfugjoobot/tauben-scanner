<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow only HTTPS traffic for production security -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <!-- Only system certificates - no self-signed certs in production -->
        </trust-anchors>
    </base-config>

    <!-- Allow capacitor://localhost for the app itself -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="true">tauben-scanner.fugjoo.duckdns.org</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
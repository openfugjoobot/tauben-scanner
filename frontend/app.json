{
  "expo": {
    "name": "Tauben Scanner",
    "slug": "tauben-scanner",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.openfugjoobot.taubenscanner",
      "infoPlist": {
        "NSCameraUsageDescription": "Die Kamera wird verwendet, um Tauben zu fotografieren und zu identifizieren.",
        "NSLocationWhenInUseUsageDescription": "Der Standort wird verwendet, um den Fundort der Taube zu speichern."
      }
    },
    "android": {
      "package": "com.openfugjoobot.taubenscanner",
      "versionCode": 1,
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/android-icon-foreground.png",
        "backgroundImage": "./assets/android-icon-background.png",
        "monochromeImage": "./assets/android-icon-monochrome.png"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Kamera wird verwendet, um Tauben zu fotografieren und zu identifizieren.",
          "microphonePermission": "Das Mikrofon wird f√ºr die Videoaufnahme verwendet (optional)."
        }
      ],
      "expo-location"
    ],
    "extra": {
      "eas": {
        "projectId": "tauben-scanner"
      }
    }
  }
}